{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@wordpress/*": ["node_modules/@wordpress/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}